<h2>New Study</h2>
<%= render 'flashes' %>
<%= simple_form_for @study, html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :name, wrapper: :horizontal_form %>
  <%= f.input :authors, wrapper: :horizontal_form %>
  <%= f.input :year, as: :integer, wrapper: :horizontal_form %>
  <h3>Treatments</h3>
  <%= f.simple_fields_for :treatments do |treatment| %>
    <%= render partial: 'treatment_fields', locals: { f: treatment } %>
  <% end %>
  <div class="links">
    <%= link_to_add_association f, :treatments do %>
      <i class="fa fa-plus-square-o"></i> Add Treatment
    <% end %>
  </div>
  <div class="form-actions form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.button :submit %>
      <%= link_to "Cancel", studies_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
