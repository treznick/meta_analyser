<%= simple_form_for [@study, @treatment], html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :description, wrapper: :horizontal_form %>
  <%= f.input :effect_size,
    as: :decimal,
    input_html: { min: '0', step: 'any' },
    wrapper: :horizontal_form %>
  <%= f.input :standard_error, as: :decimal, wrapper: :horizontal_form %>
  <div class="form-actions form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.button :submit %>
      <%= link_to "Cancel", studies_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
