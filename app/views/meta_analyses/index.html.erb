<h2>Your Meta Analyses</h2>
<%= render 'flashes' %>
<table class="table table-striped data-table">
  <thead>
    <th>ID</th>
    <th>Description</th>
    <th></th>
  </thead>
  <tbody>
    <% @meta_analyses.each do |analysis| %>
      <tr>
        <td><%= analysis.id %></td>
        <td><%= analysis.description %></td>
        <td>
          <div class="btn-group pull-right">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-cog"></i>
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu pull-right">
              <li><%= link_to 'Edit', edit_meta_analysis_path(analysis) %></li>
              <li><%= link_to 'Delete', meta_analysis_path(analysis), method: :delete, title: 'Delete', data: { confirm: "Are you sure?" } %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New Meta Analysis", new_meta_analysis_path, class: 'btn btn-primary' %>
