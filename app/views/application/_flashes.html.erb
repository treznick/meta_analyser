<% %i(notice success error alert info).each do |status| %>
  <% if flash[status] %>
    <div class="row">
      <div class="alert alert-block <%= css_class_for_flash_type(status) %>">
        <button type="button" class="close" data-dismiss="alert"><i class="fa fa-times"></i></button>
        <%= flash[status] %>
      </div>
    </div>
  <% end %>
<% end %>
<div id="flash"></div>
